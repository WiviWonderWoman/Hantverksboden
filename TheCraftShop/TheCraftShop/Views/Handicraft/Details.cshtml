@model Handicraft

@* displaying handicraft details*@
<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="~/Images/@Model.Image" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <p>@Model.Description</p>
    </div>
</div>
